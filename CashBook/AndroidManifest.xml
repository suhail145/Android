<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.DroidApps.cashbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher_dollar"
        android:label="@string/app_name"
        android:permission="android.permission.WRITE_EXTERNAL_STORAGE"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.DroidApps.cashbook.HeaderEntry"
            android:label="@string/title_activity_header_entry" >
        </activity>
        <activity
            android:name="com.DroidApps.cashbook.CashBookActivity"
            android:label="@string/title_activity_cash_book" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.DroidApps.cashbook.HeaderDisplay" >
        </activity>
        <activity
            android:name="com.DroidApps.cashbook.TransEntry"
            android:label="@string/title_activity_trans_entry" >
        </activity>
        <activity
            android:name="com.DroidApps.cashbook.QuickEntry"
            android:label="@string/title_activity_quick_entry" >
        </activity>
        <activity
            android:name="com.DroidApps.cashbook.DatePickerPopup"
            android:label="@string/title_activity_date_picker_popup" >
        </activity>
        <activity
            android:name="com.DroidApps.cashbook.PopupHandler"
            android:label="@string/title_activity_popup_handler" >
        </activity>
        <activity
            android:name="com.DroidApps.cashbook.TransGrid"
            android:label="@string/title_activity_trans_grid" >
        </activity>
        <activity
            android:name="com.DroidApps.cashbook.TransactionTest"
            android:label="@string/title_activity_transaction_test" >
        </activity>
        <activity
            android:name="com.DroidApps.cashbook.TransactionDisplay"
            android:label="@string/title_activity_transaction_display" >
        </activity>
        <activity
            android:name="com.DroidApps.cashbook.TransDisp"
            android:label="@string/title_activity_transaction_by_day" >
        </activity>
    </application>

</manifest>